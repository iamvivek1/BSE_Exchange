{
  "name": "bse-frontend-websocket",
  "version": "1.0.0",
  "description": "BSE Frontend WebSocket Integration Tests",
  "main": "bse_frontend.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:frontend": "jest tests/frontend_websocket.test.js",
    "test:e2e": "playwright test tests/frontend_ux_e2e.test.js",
    "test:e2e:ui": "playwright test tests/frontend_ux_e2e.test.js --ui",
    "test:e2e:headed": "playwright test tests/frontend_ux_e2e.test.js --headed",
    "test:performance": "node tests/performance/frontend_performance.js",
    "test:performance:html": "open tests/test_frontend_performance.html",
    "serve": "python -m http.server 8080",
    "start": "python server.py",
    "build": "echo 'No build step required for vanilla JS'",
    "lint": "eslint bse_frontend.js",
    "format": "prettier --write bse_frontend.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.2.5",
    "whatwg-fetch": "^3.6.20",
    "wscat": "^5.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "bse_frontend.js",
      "!node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "keywords": [
    "websocket",
    "frontend",
    "trading",
    "bse",
    "real-time"
  ],
  "author": "BSE Trading Platform",
  "license": "MIT"
}
